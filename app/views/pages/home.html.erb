      <% end %>
    </div>
    <h3><%= @recent_listing.year_manufactured %> <%= @recent_listing.model %></h3>
    <p class="recent-listing-username">Listed by <%= @recent_listing.user.username %></p>
    <p class="recent-listing-price">$<%= @recent_listing.price %></p>
