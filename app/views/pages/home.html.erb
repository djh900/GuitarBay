<% # Splash Image %>

<section id="splash-image">
  <% if user_signed_in? %>
    <h1>Welcome back, <%= current_user.first_name %></h1>
    <a href="/my-account" class="button">My Account</a>
  <% else %>
    <h1>SELL YOUR GUITAR</h1>
    <p>Low commission. Australian-based. No listing fees.</p>
    <%= link_to "Get Started", new_user_registration_path, class: "button" %>
  <% end %>
</section>

